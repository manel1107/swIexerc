<?php
abstract class Bebidas{
    private $nome;
    private $preco;

    public function setNome($nome){
        $this->nome = $nome;   
     }

     public function setPreco($preco){
        $this->prec = $preco;   
     }
     
     public function getNome(){
        return $this->nome;   
     }

     public function getPreco(){
        return $this->prec;   
     }

    abstract function mostrarBebida();
    abstract function verificarPreco();
}
